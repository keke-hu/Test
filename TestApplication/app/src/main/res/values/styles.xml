<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- toolbar的主题-->
        <item name="toolbarStyle">@style/ClubToolbar</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">6dp</item>
        <item name="contentInsetEnd">6dp</item>
    </style>

    <declare-styleable name="SegmentLine">
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundAngleImageView">
        <attr name="iv_radius" format="dimension" />
        <attr name="iv_topLeftRadius" format="dimension" />
        <attr name="iv_topRightRadius" format="dimension" />
        <attr name="iv_bottomLeftRadius" format="dimension" />
        <attr name="iv_bottomRightRadius" format="dimension" />
    </declare-styleable>

</resources>
