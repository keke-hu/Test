<resources>

    <declare-styleable name="ExpandableLinearLayout">
        <attr name="animation_duration" format="integer" />
        <attr name="max_height" format="dimension" />
        <attr name="expand" format="boolean" />
    </declare-styleable>


    <declare-styleable name="NumberRunningTextView">
        <attr name="duration" format="integer"/>
        <attr name="minNum" format="integer"/>
        <attr name="minMoney" format="float"/>
        <!--内容的格式-->
        <attr name="textType">
            <enum name="money" value="0"/>
            <enum name="num" value="1"/>
        </attr>
        <!--是否使用每三位数字一个逗号-->
        <attr name="useCommaFormat" format="boolean"/>
        <!--是否使用小数点-->
        <attr name="useDecimalPoint" format="boolean"/>
        <!--是否当内容改变的时候使用动画，不改变则不使用动画-->
        <attr name="runWhenChange" format="boolean"/>

    </declare-styleable>

</resources>